<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="5dp"

    android:elevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:id="@+id/dateSection">
        <TextView
            android:id="@+id/month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="month"
            android:textColor="@color/teal_200"
            android:fontFamily="@font/abel"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/abel"
            android:layout_gravity="center_horizontal"
            android:text="09"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/darkYellow" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/dateSection">
        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                app:cardCornerRadius="50dp"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/back" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/card"
                android:fontFamily="@font/abel"
                android:lines="2"
                android:layout_marginTop="10dp"
                android:text="Tidsfsdfcfwgubuyuynuyiuyiumiiuiuiuimuiuiuiuiuiuyuyuyuyuiuiuiuiuiuiuiuououoeftle"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:id="@+id/timeEXact"
                android:fontFamily="@font/abel"
                android:layout_below="@+id/title"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:textColor="@color/newTrailColor"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        android:fontFamily="@font/abel"
        android:padding="4dp"
        android:singleLine="true"
        android:visibility="gone"
        android:text="khniniuiuiuiumiuiuiuiu"
        android:textColor="@color/purple_500">

    </TextView>
</RelativeLayout>